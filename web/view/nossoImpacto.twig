{% extends 'leiaute.twig' %}

{% block conteudo %}
    <div class="container">
        <div class="row col-sm-8 col-sm-offset-2">
            <header>
                <h2><span class="glyphicon glyphicon-star"></span>&nbsp;Nosso impacto</h2>
                <small>conheça quem e como nossas comunidades estão sendo transformadas</small>
            </header>
        </div>
        <div class="row col-sm-8 col-sm-offset-2">
            <div class="col-sm-3">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="glyphicon glyphicon-heart-empty fa-3x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{ resultado.pessoa.qtd }}</div>
                                <div>Pessoas&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="glyphicon glyphicon-leaf fa-3x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{resultado.acao.qtd}}</div>
                                <div>Ações Sociais&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-yellow">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="glyphicon glyphicon-education fa-3x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{resultado.turma.qtd}}</div>
                                <div>Turmas&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-3">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="glyphicon glyphicon-user fa-3x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">{{resultado.atendimento.qtd}}</div>
                                <div>Atendimentos&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-share-alt"></i> Veja como participar
                </div>
                <div class="panel-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Ação</th>
                                <th scope="col">Público-Alvo</th>
                                <th scope="col">Dia</th>
                                <th scope="col">Turno</th>
                                <th scope="col">Horário</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for acao in acoes %}
                            <tr>
                                <td>{{acao.nome}}</td>
                                <td>{{acao.publicoAlvo.descricao}}</td>
                                <td>{{acao.diaSemana.descricao}}</td>
                                <td>{{acao.turno}}</td>
                                <td>{{acao.entrada | date('h:i')}} - {{acao.saida | date('h:i')}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>                
                </div>
            </div>
        </div>
    </div>    
 {% endblock %}