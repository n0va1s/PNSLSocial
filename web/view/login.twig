{% extends 'leiaute.twig' %}

{% block conteudo %}
<div class="container">
    <div class="row col-sm-8 col-sm-offset-2">
        <form name="frmLogin" action="{{ path('restrito_autenticacao')}}" method="POST">
            <h4 class="form-signin-heading col-sm-6 col-sm-offset-4">Já é cadastrado?</h4>
            <div class="form-group col-sm-6 col-sm-offset-4">
                <label for="email" class="sr-only">Email</label>
                <input type="email" name="_username" class="form-control" placeholder="Email" value="{{ last_username }}" required  data-validation-required-message="Informe o email cadastrado" autofocus>
            </div>
            <div class="form-group col-sm-6 col-sm-offset-4">   
                <label for="senha" class="sr-only">Senha</label>
                <input type="password" name="_password" class="form-control" placeholder="Senha" required data-validation-required-message="Informe a senha cadastrada">
            </div>    
            <div class="form-group col-sm-6 col-sm-offset-4 text-center">
                <button type="submit" class="btn btn-primary">
                    <i class="glyphicon glyphicon-ok"> Acessar</i>
                </button>
                <button type="reset" class="btn btn-default">
                    <i class="glyphicon glyphicon-remove"> Limpar</i>
                </button>
            </div>
        </form>
        {% if error %}
            <div class="error">{{ error }}</div>
        {% endif %}
    </div>
</div> 
{% endblock %}
